{
    "Verbosity": {
        "level": 2
    },
    "Dataset": {
        "name": "qm8",
        "path":{"total": "./dataset/qm8_accurate"}, 
        "format": "YQ",
        "edge_connectivity": "SMILES",
        "compositional_stratified_splitting": false,
        "rotational_invariance": true,
        "node_features": {
            "name": ["num_of_protons"],
            "dim": [1],
            "column_index": [0]
        },
        "graph_features":{
            "name":["excitation-0-1", "Total-backward", "sum-excitation-0-2-above", "sum-phonon-wing-all"],            "dim": [501, 501, 501, 501], 
            "column_index": [3, 1, [4, 5, 6], [7, 8, 9, 10]] 
        },
        "normalize_input": false,
        "standardize_input": false
    },
    "NeuralNetwork": {
        "Architecture": {
            "model_type": "PNA",
            "radius": 5,
            "periodic_boundary_conditions": false,
            "edge_features": ["length"],
            "max_neighbours": 20,
            "hidden_dim": 200,
            "num_conv_layers": 3,
            "output_heads": {
                "graph":{
                    "num_sharedlayers": 1,
                    "dim_sharedlayers": 1000,
                    "num_headlayers": 1,
                    "dim_headlayers": [500]
                }
            },
            "task_weights": [1.0, 1.0, 1.0, 1.0]
        },
        "Variables_of_interest": {
            "input_node_features": [0],
            "output_names": ["excitation-0-1", "Total-backward", "sum-excitation-0-2-above", "sum-phonon-wing-all"],
            "output_index": [0, 1,2,3],
            "type": ["graph", "graph", "graph", "graph"],
            "denormalize_output": false,
            "destandardize_input": false
        },
        "Training": {
            "num_epoch": 200,
	    "EarlyStopping": true,
            "perc_train": 0.9,
            "Optimizer": {
                "type": "AdamW",
                "learning_rate": 5e-5,
		"weight_decay": 1.0
            },
            "batch_size": 64
        }
    },
    "Visualization": {
        "plot_init_solution": false,
        "plot_hist_solution": false,
        "create_plots": true
    }
}
